                    <% }) %>
                
                </div>
        </div>
    </section>



    <section class="social-media py-5 bg-light shadow-lg">
        <div class="container">
            <div class="tittle-social-media text-dark text-center">
                <h2>Follow us on Social media</h2>
            </div>
            <div class="row p-5 text-center">
                <div class="icon col col-12 col-md-3 col-lg-3 text-center col-sm-6">
                    <a href="#" class="text-light btn btn-dark border border-light icon-sm text-center" style="width: 150px;"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                </div>

                <div class="icon col col-12 col-md-3 col-lg-3 text-center col-sm-6">
                    <a href="#" class="text-light btn btn-dark border border-light icon-sm text-center" style="width: 150px;"><i class="fa fa-instagram " aria-hidden="true"></i></a>
                </div>

                <div class="icon col col-12 col-md-3 col-lg-3 text-center col-sm-6">
                    <a href="#" class="text-light btn btn-dark border border-light icon-sm text-center" style="width: 150px;"><i class="fa fa-instagram " aria-hidden="true"></i></a>
                </div>

                <div class="icon col col-12 col-md-3 col-lg-3 text-center col-sm-6">
                    <a href="#" class="text-light btn btn-dark border border-light icon-sm text-center" style="width: 150px;"><i class="fa fa-youtube " aria-hidden="true"></i></a>
                </div>


            </div>
        </div>
    </section>

    
<script src="https://kit.fontawesome.com/1946f9078a.js" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/js/bootstrap.min.js"></script>
<script src="/slick.min.js"></script>

<script>
    var btn_New = document.querySelector('.btn_new');
    var btn_Cs = document.querySelector('.btn_cs');

    var e_New = document.querySelector('.game-new');
    var e_gameCS = document.querySelector('.game-cs');

    //Bars
    var count_bars = 0;


    $(document).ready(function()
    {{
        $('.list-news').slick({
          slidesToShow: 3,
          slidesToScroll: 1,
          autoplay: true,
          autoplaySpeed: 2000,
          centerMode: true
        });
	
    }})

    $(window).resize(function(){
    if ($(window).width() < 1200) { // Kiểm tra nếu chiều rộng của màn hình nhỏ 
        $('.list-news').slick('slickSetOption', 'slidesToShow', 1, true); // Thay đổi slidesToShow thành 1
    } else {
        $('.list-news').slick('slickSetOption', 'slidesToShow', 3, true); // Nếu không, giữ nguyên slidesToShow là 3

    }
    });
    


    btn_New.classList.add('btn_click');

    e_New.classList.add('e_flex');
    e_gameCS.classList.add('e_none');


    btn_New.addEventListener('click',()=>{
        e_New.classList.remove('e_none');
        e_New.classList.add('e_flex');

        e_gameCS.classList.remove('e_flex');
        e_gameCS.classList.add('e_none');

        btn_New.classList.add('btn_click');
        btn_Cs.classList.remove('btn_click');
    }) 
    // Else
    btn_Cs.addEventListener('click',()=>{
        e_gameCS.classList.remove('e_none');
        e_gameCS.classList.add('e_flex');

        e_New.classList.remove('e_flex');
        e_New.classList.add('e_none');

        btn_Cs.classList.add('btn_click');
        btn_New.classList.remove('btn_click');
    }) 


     $('.slider-for').slick(
        {
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true,
            asNavFor: '.slider-nav'
        });

    $('.slider-nav').slick(
        {
            slidesToShow: 3,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            dots: true,
            centerMode: true,
            focusOnSelect: true
        });


</script>
</body>
</html>